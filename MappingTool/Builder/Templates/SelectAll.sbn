#region PUBLIC METHODS - SELECT ALL RECORDS

protected static SqlCommand GetSelectAllCommand()
{
	SqlCommand commandSelectAll = new SqlCommand();
    commandSelectAll.CommandText =
    @"
        SELECT
            {{~ for c in columns ~}}
            {{ c.name }}{{ if !for.last}},{{ end }}
	        {{~ end ~}}
        FROM
            {{ table_name }}
    ";
	
    return commandSelectAll;
}

#endregion